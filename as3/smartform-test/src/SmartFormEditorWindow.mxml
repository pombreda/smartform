<s:TitleWindow 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    
    xmlns:smartform="http://www.rpath.com/2009/smartform.mxml"
    xmlns:local="*"
    minHeight="800"
    minWidth="700" 
    
    close="titlewindow1_closeHandler(event)" xmlns:views="com.rpath.raf.views.*"
    >
    
    <fx:Declarations>
        <!-- Place non-visual elements (e.g., services, value objects) here -->
    </fx:Declarations>
    
    <fx:Script>
    <![CDATA[
        import mx.events.CloseEvent;
        import mx.managers.PopUpManager;
        
        [Bindable]
        public var descriptorXML:XML;
        
        protected function titlewindow1_closeHandler(event:CloseEvent):void
        {
            PopUpManager.removePopUp(this);
        }
        
    ]]>
    </fx:Script>
    
    <views:SmartFormEditor descriptorXML="{descriptorXML}"
                           width="100%" height="100%" />
</s:TitleWindow>
