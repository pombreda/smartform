<?xml version="1.0" encoding="utf-8"?>
<s:SkinnableComponent 
    xmlns:fx="http://ns.adobe.com/mxml/2009" 
    xmlns:s="library://ns.adobe.com/flex/spark" 
    xmlns:mx="library://ns.adobe.com/flex/mx"
    
    width="100%" 
    minHeight="48"
    
    skinClass="com.rpath.raf.skins.NotificationBannerSkin"
    
    >
    
    <fx:Declarations>
    </fx:Declarations>
    <fx:Metadata>
        [Style(name="infoColor", inherit="no", type="uint")]
        [Style(name="warningColor", inherit="no", type="uint")]
        [Style(name="infoBorderColor", inherit="no", type="uint")]
        [Style(name="warningBorderColor", inherit="no", type="uint")]
        [Style(name="infoBackgroundColor", inherit="no", type="uint")]
        [Style(name="warningBackgroundColor", inherit="no", type="uint")]
    </fx:Metadata>
    <fx:Script>
    <![CDATA[
        import mx.core.IVisualElement;
        
        import spark.components.HGroup;
        
        [Bindable]
        public var message:String;
        
        [Bindable]
        public var isWarning:Boolean = false;
        
        [SkinPart(required="false")] 
        public var optionalControlsGroup:HGroup;
        
        [Bindable]
        public var optionalControls:Array;
        
        override protected function partAdded(partName:String, instance:Object):void 
        {
            super.partAdded(partName, instance);
            
            if (instance == optionalControlsGroup) 
            {
                if (optionalControlsGroup) 
                {
                    optionalControlsGroup.removeAllElements();
                    
                    for each (var dc:IVisualElement in optionalControls)
                    {
                        optionalControlsGroup.addElement(dc);
                    } 
                }
            }
        }
    ]]>
    </fx:Script>
    
    
</s:SkinnableComponent>
