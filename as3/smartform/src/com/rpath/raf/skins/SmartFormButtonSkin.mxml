<s:Skin xmlns:fx="http://ns.adobe.com/mxml/2009" 
        xmlns:s="library://ns.adobe.com/flex/spark" 
        minWidth="21" minHeight="21"
        alpha.disabled="0.5"
        >
    
    <fx:Metadata>
        [HostComponent("com.rpath.raf.controls.SmartFormButton")]
    </fx:Metadata>
    
    <fx:Script>
        <![CDATA[
            import flash.filters.BitmapFilterType;
        ]]>
    </fx:Script>
    
    <s:states>
        <s:State name="up" />
        <s:State name="over" />
        <s:State name="down" />
        <s:State name="disabled" />
    </s:states>
    
    <s:Group id="buttonSkinGroup"
             top="1" left="1" bottom="-1" right="-1"
             top.down="0" left.down="0" bottom.down="0" right.down="0"
             minHeight="16" minWidth="20"
             >
        
        <s:Rect radiusX="3" radiusY="3"
                top="0" left="0" bottom="0" right="0"
                
                >
            <s:fill>
                <s:LinearGradient rotation="90">
                    <s:GradientEntry color="0xb5ccd2" 
                                     color.over="0xb5ccd2" 
                                     color.down="0xb5ccd2" 
                                     color.disabled="0x7e929a"
                                     alpha="0.8"
                                     alpha.over="1.0"
                                     alpha.down="1.0"
                                     alpha.disabled="0.7"
                                     />
                    <s:GradientEntry color="0x7e929a" 
                                     color.over="0x7e929a" 
                                     color.down="0x7e929a" 
                                     color.disabled="0x7e929a"
                                     alpha="0.8"
                                     alpha.over="1.0"
                                     alpha.down="1.0"
                                     alpha.disabled="0.7"
                                     />
                </s:LinearGradient>
            </s:fill>
            <s:filters>
                <s:BevelFilter angle="45"
                               distance="1"
                               highlightColor="0xffffff"
                               shadowColor="0x000000"
                               highlightColor.down="0x000000"
                               shadowColor.down="0xcccccc"
                               strength.down="1"
                               strength="2"
                               type="{BitmapFilterType.INNER}"
                               />
                
            </s:filters>
            <s:stroke>
                <s:LinearGradientStroke rotation="90"
                                        weight="1" 
                                        pixelHinting="true">
                    <s:GradientEntry color="0x555555"/>
                    <s:GradientEntry color="0x333333"/>
                </s:LinearGradientStroke>
            </s:stroke>
        </s:Rect>
        
    </s:Group>
    
    <!-- label -->
    <!--- @copy spark.components.supportClasses.ButtonBase#labelDisplay -->
    <s:Label id="labelDisplay"
             color="0x000000"
             color.over="0x333333"
             horizontalCenter="0" verticalCenter="1"
             horizontalCenter.down="1" verticalCenter.down="2"
             left="10" right="10" top="2" bottom="2"
             textAlign="center"
             verticalAlign="middle"
             maxDisplayedLines="1"
             minHeight="18"
             >
    </s:Label>
    
</s:Skin>